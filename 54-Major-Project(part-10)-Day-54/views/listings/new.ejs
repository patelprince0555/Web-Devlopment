<%layout("/layouts/boilerplate")%>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
      </br></br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
     <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]"
       placeholder="Add a catchy title" 
       type="text"
       class="form-control"
       required
       />
       <div class="valid-feedback">Title looks good</div>
     </div>
      <!-- <br /><br /> -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
        name="listing[description]"
        class="form-control" required></textarea>
        <div class="invalid-feedback">please enter valid description</div>
      </div>
      <!-- <br /><br /> -->

     <div class="mb-3"></div>
      <label for="image" class="form-label">Upload Listing Image</label>
      <input
      name="listing[image]"
      type="file"
      class="form-control" required
    />
      <!-- <br /><br /> -->
     <div class="row">
      <div class="mb-3 col-md-4" >
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" 
        placeholder="1400"
        type="number"
        class="form-control" required/>
        <div class="invalid-feedback">please enter a valid price</div>
      </div>
      <!-- <br /><br /> -->
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">country</label>
        <input name="listing[country]"
         placeholder="India"
          type="text"
          class="form-control" required/>
          <div class="invalid-feedback">please enter the country name</div>
      </div>
     </div>
      <!-- <br /><br /> -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
        name="listing[location]"
        placeholder="Patna,Bihar"
        type="text"
        class="form-control" required
      />
      <div class="invalid-feedback">location should be valid</div>
      </div>
      <!-- <br /><br /> -->
      <button type="submit" class="btn btn-dark btn-color mt-3" >Add</button>
    </br></br>
    </form>
      </div>
    </div>